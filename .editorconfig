# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# HTML Templates - IMPORTANT: Disable aggressive formatting
# These files contain Go template syntax ({{ }}) that can be
# corrupted by automatic formatters
[static/templates/*.html]
indent_style = space
indent_size = 4
# GoLand/IntelliJ specific: These settings signal to avoid
# aggressive HTML reformatting. Additionally configure in IDE:
# Settings > Editor > Code Style > HTML > Do not indent children of: template
# Settings > Tools > Actions on Save > Disable "Reformat code" for templates

# Shell scripts
[*.sh]
indent_size = 2

# Lua files
[*.lua]
indent_size = 4
